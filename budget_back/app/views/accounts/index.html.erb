<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Due date</th>
      <th>Type</th>
      <th>Amount due</th>
      <th>Frequency</th>
      <th>Paid</th>
      <th>Remaining</th>
      <th>Payment</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.due_date %></td>
        <td><%= account.type %></td>
        <td><%= account.amount_due %></td>
        <td><%= account.frequency %></td>
        <td><%= account.paid %></td>
        <td><%= account.remaining %></td>
        <td><%= account.payment %></td>
        <td><%= account.notes %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

